<div class="card">
    <form class="form-horizontal form-new-event">

    <h3 class="card-header">Edit Event </h3>
    <div class="form-group">
      <div class="col-sm-10">
          <button class="button" type="submit" id="save">Update </button>
           <button class="button" type="submit" id="save">Delete </button>
          </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Event Title</label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-title" minlength="6" required="required" value= {{events.title}}/>
      </div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-2" for="email" minlength="6"  required="required"minlength="6" maxlength="20" required="required" >Event Description: </label>
      <div class="col-sm-10">
        <textarea placeholder="enter description" id="event-description"  minlength="6" required="required" rows="4" cols="50" > {{events.description}} </textarea>
      </div>
    </div>

     <div class="form-group">
      <label class="control-label col-sm-2" for="email" minlength="6"  required="required"minlength="6" maxlength="20" required="required" >Event Date : </label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-title" minlength="6" required="required" value = '{{format_date events.startdate}}  {{format_time events.startdate}} TO {{format_time events.enddate}}'/>
      </div>
    </div>
    {{#if events.virtualLink}}
     <div class="form-group">
      <label class="control-label col-sm-2" for="email" minlength="6"  required="required"minlength="6" maxlength="20" required="required" >Virtual  : </label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-title" minlength="6" required="required" value= {{events.virtualLink}}/>
      </div>
    </div>
    {{else}}
     <div class="form-group">
      <label class="control-label col-sm-2" for="email"  required="required"minlength="6"  required="required" >Address  : </label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-title"  required="required" value= {{events.address}}, {{events.city}} {{events.state}}/>
      </div>
    </div>
    {{/if}}
    </form>
</div>
{{> comments events.comments}}

{{> modal}}
<script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
<script src="../js/saveEvent.js" type="text/javascript" ></script>
