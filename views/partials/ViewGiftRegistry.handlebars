<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#giftModal">
  VIEW GIFT REGISTRY 
</button>

<div class="modal fade" id="giftModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"> VIEW Gift Registry</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         
<table id="table-gift"> 
        <thead>
            <tr>
                <th>Select </th>
                <th>Item-Name  </th>
                <th>URL </th>
            </tr>
        </thead>
        <tbody>
            {{#each gifts as |gift|}}
                <tr>
                <td>
                </td>
                <td>
                    {{gift.name}}
                </td>
                <td>
                    {{url}}
                </td>
            </tr>
            {{/each}}

        </tbody>
</table>
  <button type="button" class="delete-row-gift">Delete Row</button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

