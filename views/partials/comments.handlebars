
<div class="card">
    <div class="card-header">
        <h5 class="card-title"> Comments</h5>
    </div>
    <div class="card-body">
        <form class="comment-form">
            Add Your Comment 
            <textarea rows="5" cols="10" class="form-control comment-text" name="comment" minlength="6" required="required"> </textarea>
            <button class="button" type="submit" id="add-comment"> Submit </button>
        </form>
        </div>
</div>

<div class="comments">
  {{#each events.comments as |comment|}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="text">
                {{commenttext}}
            </div>
            <div style="float:right">
                <i><strong> Posted by {{user.username}} On  {{format_date commentdate}} </strong></i>
            </div>
        </section>
    </div>
  {{/each}}
</div>

<script src="/js/comment.js" type="text/javascript" ></script>
