<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#rsvpModal">
  RSVP
</button>
<div class="modal fade" id="rsvpModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title modal-label">RSVP</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form id="form-rsvp">
            <input type="radio" id="yes" value="YES" name="rsvp">
            <label class="modal-label">YES</label><br>
            <input type="radio" id="no" value="NO" name="rsvp">
            <label class="modal-label">NO</label><br>
            <input type="radio" id="maybe" value="MAY BE" name="rsvp">
            <label class="modal-label">MAY BE</label> <br/>
            <label class="modal-label">Adult count: </label>
            <input class="modal-label" type="number" id="adult-count" min="1" max="5"> <br/>

        <label class="modal-label">Kids count: </label>
        <input class="modal-label" id="kids-count" type="number" min="1" max="5">
        </form>
       
    </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="saveRSVP" data-dismiss="modal">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


