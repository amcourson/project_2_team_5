<div class="card">
    <h3 class="card-header">Create New Event </h3>
    <form class="form-horizontal card-body form-new-blog">
    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Event Title</label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-title" minlength="6" maxlength="20" required="required"/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="category">Event Category</label>
      <div class="col-sm-10">
          <select name="cars" id="event-category">
            {{#if categories.length}}
              {{#each categories as |category|}}
                <option id={{id}}>{{categoryName}}</option>
              {{/each}}
            {{/if}}
            </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email" minlength="6" maxlength="20" required="required"minlength="6" maxlength="20" required="required" >Event Description: </label>
      <div class="col-sm-10">
        <textarea placeholder="enter description" id="event-description"  minlength="6" maxlength="20" required="required" rows="4" cols="50"></textarea>
      </div>
    </div>
      <div class="form-group">
      <label class="control-label col-sm-2" for="email">Date </label>
          <div class="col-sm-10">
          <input type="date" id="startDate">
          <input type="time" id="startTime"> TO 
          <input type="time" id="endTime">
      </div>
      </div>
      <div class="form-group">
      <label class="control-label col-sm-2 text-center" for="virtual"> Make this a Virtual Event (Recommended) </label>
      <div class="col-sm-10">
        <input type="checkbox" name="virtual" id="makeitVirtual">
        <input type="text" name="virtual-link" id="virtualLinkEL" hidden="true" placeholder="Enter your Video chat link">
      </div>
    </div>
    
    <div id="address">
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Street Address</label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-address" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Apt/Building No</label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-title" />
      </div>
    </div>
     <div class="form-group">
      <label class="control-label col-sm-2" for="email">City</label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-city" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">State</label>
      <div class="col-sm-10">
        <input name="Event Title" class="form-control" id="event-state" />
      </div>
    </div>
    </div>
    {{> AddPotluck}}
{{> AddGiftRegistry}}
{{> AddPeople}}
    <div class="form-group">
      <label class="control-label col-sm-2 text-center" for="virtual"> Save options </label>
      <div class="col-sm-10">
          <button class="button" type="submit" id="saveEvent">Save </button>
          <button class="button" id="saveEventAsDraft"> Save as Draft</button>
      </div>
    </div>
    </form>
</div>

{{> modal}}



<script src="../js/saveEvent.js" type="text/javascript" ></script>
