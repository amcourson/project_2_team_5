<div class="container">
    <div class="row">
        <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded shadow shadow-sm">
                        <div class="card-header">
                            <h3 class="mb-0">Create An Account </h3>
                        </div>
                        <div class="card-body">
                            <form class="form form-signup">
                                <div class="form-group">
                                    <label for="email-login">Username: </label>
                                    <input class="form-input input-username-signup" type="text" minlength="6" maxlength="20" required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="email-login">Email: </label>
                                    <input class="form-input input-email-signup" type="email" minlength="6" maxlength="20" required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="email-login">First Name: </label>
                                    <input class="form-input input-fname-signup" type="text" minlength="6" maxlength="20" required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="email-login">Last Name : </label>
                                    <input class="form-input input-lname-signup" type="text" minlength="6" maxlength="20" required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="email-login">Address: </label>
                                    <input class="form-input input-address-signup" type="text" minlength="6" maxlength="20" required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="email-login">Phone No: </label>
                                    <input class="form-input input-phone-signup" type="text" minlength="6" maxlength="20" required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="password-login">Password: </label>
                                    <input class="form-input input-password-signup" type="password" minlength="8"  required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="password-login"> Confirm Password: </label>
                                    <input class="form-input input-confirm-password-signup" type="password" minlength="8" required="required"/>
                                </div>
                                <div class="form-group">
                                    
                                    <button class="button" type="submit">SignUp</button>
                                    <button class="button">
                                        <a class="already-have-account-button button" href="/login">Already have an
                                            account</a>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="../js/signup.js" type="text/javascript"></script>